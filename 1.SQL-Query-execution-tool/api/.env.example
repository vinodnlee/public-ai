# ─────────────────────────────────────────────────────────────────────────────
# .env.example — API environment template for local development
#
# Copy to .env and fill in your values:
#   cp .env.example .env
#
# !! Never commit .env to version control !!
# ─────────────────────────────────────────────────────────────────────────────

# Application
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
CORS_ORIGINS=http://localhost:3000

# ── Database ──────────────────────────────────────────────────────────────────
# Options: postgresql | mysql | sqlite
DB_TYPE=postgresql

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=chatdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# MySQL (when DB_TYPE=mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=chatdb
MYSQL_USER=root
MYSQL_PASSWORD=root

# SQLite (when DB_TYPE=sqlite)
SQLITE_PATH=./local.db

# ── Redis ─────────────────────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL_SECONDS=3600

# ── LLM (required for chat) ───────────────────────────────────────────────────
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o
LLM_API_KEY=sk-...your_openai_api_key_here...
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.0

# ── DeepAgent ─────────────────────────────────────────────────────────────────
DEEPAGENT_MAX_ITERATIONS=10
DEEPAGENT_TIMEOUT_SECONDS=120

# ── JWT Auth (optional) ───────────────────────────────────────────────────────
AUTH_ENABLED=false
JWT_SECRET=change-me-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
