# ─────────────────────────────────────────────────────────────────────────────
# .env.docker — docker-compose environment template
#
# Copy to .env and fill in your values:
#   cp .env.docker .env
#
# !! Never commit .env to version control !!
# ─────────────────────────────────────────────────────────────────────────────

# Application
APP_ENV=production
APP_HOST=0.0.0.0
APP_PORT=8000
UI_PORT=3000

# CORS — comma-separated allowed origins
CORS_ORIGINS=http://localhost:3000

# ── Database ──────────────────────────────────────────────────────────────────
DB_TYPE=postgresql

# PostgreSQL  (host/port overridden to Docker service name in docker-compose)
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=chatdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# ── Redis  (host overridden to Docker service name in docker-compose) ─────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL_SECONDS=3600

# ── LLM ───────────────────────────────────────────────────────────────────────
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o
LLM_API_KEY=sk-...your_openai_api_key_here...
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.0

# ── DeepAgent ─────────────────────────────────────────────────────────────────
DEEPAGENT_MAX_ITERATIONS=10
DEEPAGENT_TIMEOUT_SECONDS=120
